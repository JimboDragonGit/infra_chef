
Chef::Application.fatal!("Must have the attribute <%= @cookbook_name %> => project_name") if node['<%= @cookbook_name %>']['project_name'] == ""
Chef::Application.fatal!("Must have the attribute <%= @cookbook_name %> => project_name") if node['<%= @cookbook_name %>']['install_dir'] == ""

default["<%= @cookbook_name %>"]["initial_command"] = "wget https://raw.githubusercontent.com/#{node['<%= @cookbook_name %>']['project_name']}/initialize_chef_repo/master/initializator.sh && bash initializator.sh #{node['<%= @cookbook_name %>']['project_name']} #{node['<%= @cookbook_name %>']['environments']}"
default["<%= @cookbook_name %>"]["cron_chef_solo_command"] = "chef-solo --chef-license 'accept' --config #{::File.join(node['<%= @cookbook_name %>']['install_dir'], "solo.rb")} --override-runlist \"role[#{node['<%= @cookbook_name %>']['project_name']}]\" > /var/log/chef_client.log"

<% if node[@cookbook_name]["gitinfo"] %>
default["<%= @cookbook_name %>"]["gitinfo"] = <%= JSON.pretty_generate(node[@cookbook_name]["gitinfo"]) %>
<% else %>
default["<%= @cookbook_name %>"]["gitinfo"] = {
  "type": "",
  "repository": "#{node['chef-git-server']['user']}@#{node["ipaddress"]}:#{node['chef-git-server']['home']}/#{node['<%= @cookbook_name %>']['project_name']}.git",
  "revision": "master",
  "remote": "origin",
  "submodules": {
    "#{node['<%= @cookbook_name %>']['project_name']}_generator": {
      "type": "generators",
      "repository": "#{node['chef-git-server']['user']}@#{node["ipaddress"]}:#{node['chef-git-server']['home']}/#{node['<%= @cookbook_name %>']['project_name']}_generator.git",
      "revision": "master",
      "remote": "origin"
    },
    <% if @cookbook_name.include?(node[@cookbook_name]['project_name']) %>
    "<%= @cookbook_name %>": {
      "type": "cookbooks",
      "repository": "#{node['chef-git-server']['user']}@#{node["ipaddress"]}:#{node['chef-git-server']['home']}/#{@cookbook_name}.git",
      "revision": "master",
      "remote": "origin"
    }
    <% else %>
    "#{node['<%= @cookbook_name %>']['project_name']}_#{@cookbook_name}": {
      "type": "cookbooks",
      "repository": "#{node['chef-git-server']['user']}@#{node["ipaddress"]}:#{node['chef-git-server']['home']}/#{node['<%= @cookbook_name %>']['project_name']}_#{@cookbook_name}.git",
      "revision": "master",
      "remote": "origin"
    }
    <% end %>
  }
}
<% end %>
